.userview {
  width: 100%;
  height: 149px;
  background-color: cadetblue;
  align-items: center;
  display: flex;
  flex-direction: column;
}

.userimage {
  margin-top: 5px;
  border-radius: 25px;
  width: 50px;
  height: 50px;
}

.username {
  margin-top: 8px;
  color: white;
  font-size: 14px;
}

.usersignature {
  margin-top: 8px;
  color: white;
  font-size: 12px;
}

.tabView {
  width: 100%;
  margin-top: 15px;
  display: flex;
  flex-direction: row;
}

.tab {
  display: flex;
  flex-direction: column;
  text-align: center;
  width: 33.3%;
  font-size: 12px;
  color: white;
}

.tabtext {
  margin-top: 4px;
}

.line {
  margin-top: 7px;
  margin-bottom: 7px;
  width: 1px;
  background-color: white;
}

.projectview {
  margin-top: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.addview{
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 15px;
  width: 95%;
  height: 150px;
  background-color: coral;
}
.addimage{
  width: 100px;
  height: 100px;
  margin-top: 25px;
}
.addbtn{
  position: fixed;
  margin-top: 133%;
  margin-left: 40%;
  width: 40px;
  height: 40px;
  background-color: chartreuse;
}