/* pages/edit/edit.wxss */

.coverview {
  width: 100%;
  height: 150px;
  overflow: hidden;
  position: relative;
}

.covertopimage {
  position: absolute;
  width: 100%;
  height: 400px;
}

.covertitle {
  position: absolute;
  margin-left: 10px;
  margin-top: 10px;
  width: 95%;
  color: white;
  font-size: 20px;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
